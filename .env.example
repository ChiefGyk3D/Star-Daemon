# Star-Daemon Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# Core Settings
# =============================================================================
# Check interval in seconds (default: 60)
CHECK_INTERVAL=60

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# Secrets Management (Choose ONE - Optional)
# =============================================================================

# --- Option 1: Doppler ---
# If using Doppler for secrets management, set this to your Doppler token
# When using Doppler, you can leave other secrets empty here
# DOPPLER_TOKEN=your_doppler_token_here

# --- Option 2: AWS Secrets Manager ---
# If using AWS Secrets Manager, set these values
# AWS credentials can be set via AWS CLI, IAM roles, or environment variables
# AWS_SECRET_NAME=star-daemon/production
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your_access_key_here  # Optional if using IAM roles
# AWS_SECRET_ACCESS_KEY=your_secret_key_here  # Optional if using IAM roles

# --- Option 3: HashiCorp Vault ---
# If using HashiCorp Vault for secrets management
# VAULT_ADDR=https://vault.example.com:8200
# VAULT_TOKEN=your_vault_token_here
# VAULT_SECRET_PATH=secret/data/star-daemon  # KV v2 path

# --- Option 4: Local .env file (default) ---
# If none of the above are configured, secrets are read from this .env file

# =============================================================================
# GitHub Configuration
# =============================================================================
# GitHub Personal Access Token
# Recommended: use a fine-grained or minimal-scope token.
# - For public-repo monitoring only: a classic token with `public_repo` is sufficient,
#   or create a fine-grained token with Repository -> Read-only (Stars/Contents as needed).
# - For monitoring private repositories or more advanced access: include `repo` scope or
#   a fine-grained token with the appropriate repository access.
# Store the token in your secrets manager (Doppler / AWS / Vault) or set it in `.env`.
GITHUB_ACCESS_TOKEN=your_github_token_here

# Optional: Monitor specific user (defaults to authenticated user)
# GITHUB_USERNAME=

# =============================================================================
# Mastodon Configuration
# =============================================================================
# Enable Mastodon posting (true/false)
MASTODON_ENABLED=false

# Mastodon instance URL (e.g., https://mastodon.social)
MASTODON_API_BASE_URL=https://your.mastodon.instance

# Mastodon API credentials
MASTODON_CLIENT_ID=your_client_id_here
MASTODON_CLIENT_SECRET=your_client_secret_here
MASTODON_ACCESS_TOKEN=your_access_token_here

# =============================================================================
# BlueSky Configuration
# =============================================================================
# Enable BlueSky posting (true/false)
BLUESKY_ENABLED=false

# BlueSky handle (e.g., user.bsky.social)
BLUESKY_HANDLE=your.handle.bsky.social

# BlueSky app password (not your main password!)
# Generate at: https://bsky.app/settings/app-passwords
BLUESKY_APP_PASSWORD=your_app_password_here

# =============================================================================
# Discord Configuration
# =============================================================================
# Enable Discord posting (true/false)
DISCORD_ENABLED=false

# Discord webhook URL
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url

# Optional: Discord role ID to mention (for notifications)
# Get this by typing \@RoleName in Discord to see the ID
# DISCORD_ROLE_ID=123456789012345678

# Optional: Discord bot token (for richer integration - not currently used)
# DISCORD_BOT_TOKEN=your_bot_token_here
# DISCORD_CHANNEL_ID=your_channel_id_here

# =============================================================================
# Matrix Configuration
# =============================================================================
# Enable Matrix posting (true/false)
MATRIX_ENABLED=false

# Matrix homeserver URL
MATRIX_HOMESERVER=https://matrix.org

# Matrix credentials
MATRIX_USER_ID=@your_user:matrix.org
MATRIX_PASSWORD=your_matrix_password

# Matrix room to post to (room ID or alias)
MATRIX_ROOM_ID=!your_room_id:matrix.org

# Optional: Use access token instead of password
# MATRIX_ACCESS_TOKEN=your_access_token_here

# =============================================================================
# Message Customization
# =============================================================================
# Template for status messages (use {url}, {name}, {description} placeholders)
MESSAGE_TEMPLATE=I just starred {name} on GitHub: {url}

# Include repository description in posts (true/false)
INCLUDE_DESCRIPTION=false

# Maximum message length (platform-specific limits will be enforced)
MAX_MESSAGE_LENGTH=500

# =============================================================================
# Note: Twitter/X support removed
# =============================================================================
# Twitter/X integration has been removed due to API changes and restrictive
# pricing on their free tier. The API significantly changed since the last
# implementation, and the free tier is too limiting for this use case.
#
# If you need Twitter/X support, consider using a third-party bridge service
# or exploring alternatives like Mastodon or BlueSky which have better API support.
# =============================================================================
